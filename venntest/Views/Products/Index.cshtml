@model venntest.ViewModels.AllProductsViewModel
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
@if (Model.Products.Count == 0)
{
    <p>No product in the list</p>
}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <th scope="row">@product.Name</th>
                <td>@product.Price</td>
                <td>
                    @if (product.InStock == 0)
                    {
                        <span class="badge rounded-pill bg-danger">Out of stock</span>
                    }
                    else
                    {
                        if (product.InStock <= 10)
                        {
                            <span class="badge rounded-pill bg-warning">Less than 10 in the stock</span>
                        }
                        else
                        {
                            <span class="badge rounded-pill bg-info">In stock</span>
                        }
                    }


                </td>
                <td>
                    <div class="btn-group float-end" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-secondary btn-sm">@Html.ActionLink("Details", "Details", "Products", new { id = product.Id }, null)</button>
                        <button type="button" class="btn btn-secondary btn-sm">Update</button>
                        <button type="button" class="btn btn-secondary btn-sm">Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


